<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d9c80"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:background="@drawable/mesrendev"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="316dp"
        android:id="@+id/listView"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12">

        <Button
            android:layout_width="88dp"
            android:layout_height="89dp"
            android:id="@+id/buttonreservation"
            android:background="@drawable/ic_directions_car_white_24dp"
            android:layout_marginLeft="40dp"
            android:onClick="reservation"/>

        <TextView
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mes reservations"
            android:id="@+id/textView15"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>