<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d9c80"
    android:weightSum="1">

    <Button
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/commentglycemie"
        android:layout_weight="0.04"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Veuillez saisir le résultat de la prise de glycémie:"
        android:id="@+id/textView7"
        android:textColor="#FFF"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:layout_marginTop="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="0.04"
            android:textSize="72dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="g/L"
            android:id="@+id/textView6"
            android:textSize="72dp"
            android:textColor="#51799c" />
    </LinearLayout>

    <Button
        android:layout_width="342dp"
        android:layout_height="115dp"
        android:id="@+id/buttonenvoyer"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_send_white_36dp"
        android:layout_marginTop="20dp" />

</LinearLayout>